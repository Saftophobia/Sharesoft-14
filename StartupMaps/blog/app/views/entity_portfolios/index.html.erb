<h1>All your portfolios</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
       <th>Description</th>
       <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @entity_portfolios.each do |entity_portfolio| %>
      <tr>
        <td><%= link_to entity_portfolio.name, entity_portfolio %></td>
        <td><%= entity_portfolio.description %></td>
        
        <td><%= link_to 'Delete', entity_portfolio, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

