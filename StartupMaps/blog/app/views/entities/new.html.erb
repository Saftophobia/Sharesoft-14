<h1>New account</h1>


<!-- This form submits the inputs that are to be put into the databases. -->
<!-- Input: Takes the attribute @entity. -->
<!-- Output: Inputs into database. -->
<!-- Adel Zee Badawy. -->

<%= form_for(@entity) do |f| %>


  <!-- This part posts the errors that are met in the model. These are errors are made by conditions 
  not being met.-->
  <!-- Input: The array consisting of the errors. -->
  <!-- Output: The error messages. -->
  <!-- Adel Zee Badawy. -->

  <% if @entity.errors.any? %>
    <div id = "error_explanation">
      <h2>Please fix the following errors:</h2>
      <ul>
      <% @entity.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


  <div class = "field">
    <%= f.label :name, "Username (at least 3 characters)" %> <br>
    <%= f.text_field :name %> <br>
    <%= f.label :e_mail, "E-Mail" %> <br>
    <%= f.text_field :e_mail %> <br>
    <%= f.label :password, "Password (at least 6 characters)"%> <br>
    <%= f.password_field :password %> <br>
    <%= f.label :password_confirmation, "Confirm Password" %> <br>
    <%= f.password_field :password_confirmation %><br>
    <%= f.label :type, "Entity Type" %> <br>
    <%= f.select(:type, options_for_select([['Please select an entity type...', '0'], ['Investor', '1'], ['Service', '2'], ['Startup', '3']], selected: :type)) %> <br> <br>
    <%= f.label :location, "Insert City and Street Name in this format: City, Street Name." %> <br>
    <%= f.text_field :location %>
  </div>
  <div class = "actions">
    <%= f.submit "Create Account" %>
  </div>
<% end %>

<%= link_to 'Back', root_path %>
