  <%= check_box_tag "prefs[]", value = 'food', id = 'food' %><br />

  <%= label_tag :music %>
  <%= check_box_tag "prefs[]", value = 'music', id = 'music' %><br />

  <%= label_tag :arts %>
  <%= check_box_tag "prefs[]", value = 'art', id = 'art' %><br />

  <%= label_tag :culture %>
  <%= check_box_tag "prefs[]", value = 'culture', id = 'culture' %><br />

  <%= label_tag :engineering %>
