<!-- 
     # Defintion: This view is used by the entity to enter its email so that it could reopen its account.
     # Input: Void.
     # Output: Email.
     # Author: Omar El Menawy.
-->

<h2>Resend unlock instructions</h2>
<%= form_for(resource, as: resource_name, url: unlock_path(resource_name), html: { method: :post }) do |entity| %>
  <%= devise_error_messages! %>
  <div>
    <%= entity.label :email %><br />
    <%= entity.email_field :email, autofocus: true %>
  </div>
  <div>
    <%= entity.submit "Resend unlock instructions" %>
  </div>
<% end %>
<%= render "devise/shared/links" %>
