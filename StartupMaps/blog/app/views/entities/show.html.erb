 <% if @entity.type == "Startup" %>
  <% if @entity.id == 1  %> 
   <% if @all_achieved_badges.size != 25 %>
    <%= button_to 'View unachieved badges', entity_show_unachieved_badges_path(entity_id: params[:id])%>
   <% end %>
   <% if @recently_achieved_badges.size != 0 %>
    <% @recently_achieved_badges.each do |badge| %>
     <% if badge.level == 1 %>
      <script>
       alert('<%= image_tag "Bronze_1.png" %>' + "\n Congratulations! You have achieved the badge: " + '<%= badge.name %>' + "\n Description: " + '<%= badge.description %>' + "\n Level: " + '<%= badge.level %>');
      </script>
     <% else %>
      <% if badge.level == 2 %>
       <script>
        alert('<%= image_tag "Silver_1.png" %>' + "\n Congratulations! You have achieved the badge: " + '<%= badge.name %>' + "\n Description: " + '<%= badge.description %>' + "\n Level: " + '<%= badge.level %>');
       </script>
      <% else %>
       <% if badge.level == 3 %>
        <script>
         alert('<%= image_tag "Gold_1.png" %>' + "\n Congratulations! You have achieved the badge: " + '<%= badge.name %>' + "\n Description: " + '<%= badge.description %>' + "\n Level: " + '<%= badge.level %>');
        </script>
       <% else %>
        <script>
         alert('<%= image_tag "Platinum_1.png" %>' + "\n Congratulations! You have achieved the badge: " + '<%= badge.name %>' + "\n Description: " + '<%= badge.description %>' + "\n Level: " + '<%= badge.level %>');
        </script>
       <% end %>
      <% end %>
     <% end %>
    <% end %>
   <% end %> 
  <% end %>
  <% if @achieved_badges.size != 0 %>
   <h1> Achievements </h1>
   <table>
    <tbody>
     <tr>
      <% @achieved_badges.each do |badge| %>
       <td>
        <% if badge.level == 1 %>
         <%= image_tag "Bronze_1.png" %>
        <% else %>
         <% if badge.level == 2 %>
          <%= image_tag "Silver_1.png" %>
         <% else %>
          <% if badge.level == 3 %>
           <%= image_tag "Gold_1.png" %>
          <% else %>
           <%= image_tag "Platinum_1.png" %>
          <% end %>
         <% end %>
        <% end %>
        <br>
        <label> Name: </label>
        <%= badge.name %>
        <br>
        <label> Description: </label>
        <%= badge.description %>
        <br>
        <label> Level: </label>
        <%= badge.level %>
       </td>
      <% end %>
     </tr> 
    </tbody>
   </table>
  <% end %> 
 <% end %>
