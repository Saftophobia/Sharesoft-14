<% if !flash[:notice].blank? %>
 <div class="alert alert-info">
  <%= flash[:notice] %>
 </div>
<% end %>
<br />
<%= link_to "New Resume", new_resume_path, :class => "button" %>
<br />
<br />
<% if @resumes.size <= 0 %>
<p> There are no resumes<p>  
<% else %>  
<table class="table table-bordered table-striped">
 <thead>
  <tr>
    <th>Name</th>
    <th>Download Link</th>
    <th>&nbsp;</th>
   </tr>
 </thead>
<tbody>
 <%= will_paginate @resumes %> 
 <% @resumes.each do |resume| %>
  <tr>
   <td><%= resume.name %></td>
   <td><%= link_to "Download Resume", resume.attachment_url %></td>
   <td><%= button_to "Delete",  resume, method: :delete, class: "btn btn-danger", confirm: "Are you sure that you wish to delete #{resume.name}?", :class => "button" %></td>
  </tr>
 <% end %>
</tbody>
</table>
<%end  %>
