<!--
  # Definition: Makes sure that there are no errors.
  # Input: none.
  # Output: void.
  # Author: Essam Azzam.
--> 

<% if !@resume.errors.empty? %>
  <div class="alert alert-error">
    <ul>
      <% @resume.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>


<!--
  # Definition: Submits the upload with the given name.
  # Input: name, attachment.
  # Output: void.
  # Author: Essam Azzam.
--> 

<div class="well">
  <%= form_for @resume, html: { multipart: true } do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>
    <%= f.label :attachment %>
    <%= f.file_field :attachment %>
    <%= f.submit "Save", class: "btn btn-primary" %>
  <% end %>
</div>
